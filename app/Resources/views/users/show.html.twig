{% extends 'base.html.twig' %}

{% block body %}
	<h1>Users</h1>
	<div>
		<table class="table table-responsive">
			<thead>
				<th>Name</th>
				<th>Email</th>
				<th>Birthday</th>
			</thead>
			<tbody>
			{% for user in users %}
				<tr>
					<td>{{ user.firstName }} {{ user.lastName }}</td>
					<td>{{ user.email }}</td>
					<td>{{ user.dateOfBirth|date("Y-m-d") }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
