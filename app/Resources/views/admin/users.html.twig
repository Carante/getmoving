{% extends 'admin/base.html.twig' %}

{% block body %}
  <h1 class="page-header">Users</h1>
  <div class="row">
    <table class="table table-bordered table-responsive">
      <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Nationality</th>
      <th>Role</th>
      <th></th>
      </thead>
      <tbody>
      {% for user in users %}
        <tr>
          <td>{{ user.firstName }} {{ user.middleName }} {{ user.lastName }}</td>
          <td>{{ user.email }}</td>
          <td>{{ user.phone }}</td>
          <td>{{ user.nationality }}</td>
          <td>{{ user.roles[0] }}</td>
          <td><a href="{{ path('admin_volunteer_edit', {'volunteerId': user.id}) }}"><button class="btn btn-sm btn-primary">Edit <i class="fa fa-pencil"></i></button></a></td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

