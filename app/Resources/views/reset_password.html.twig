{% extends 'base.html.twig' %}

{% block body %}
  <section>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 text-center">
          <div class="row form-wrap registration-form-wrap well well-lg white margin--top-huge">
            <h3 class="margin--top-none margin--bot-l">Reset your password</h3>

            {{ form_start(form) }}
              {{ form_row(form.plainPassword.first, {
                'label': 'Password'
              }) }}
              {{ form_row(form.plainPassword.second, {
                'label': 'Repeat password'
              }) }}
            <button type="submit" class="btn btn-success btn-sm btn-block margin--top">Send password <i class="fa fa-send"></i></button>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

