{{ form_start(form, {'attr':{'novalidate':''}}) }}

<div class="row">
  <div class="col-md-6">
    <h4>Identity</h4>
    {{ form_row(form.name, { 'value' : organisation.name } ) }}
    <div id="kv-avatar-errors-2" style="width:800px;display:none"></div>

    <label class="control-label">Logo</label>
    <!-- Button trigger modal -->
    <div>
      <button type="button" class="btn btn-default btn-lg" id="mediaLibraryModalTrigger" data-toggle="modal"
              data-target="#mediaLibrary">
        <div class="file-preview-thumbnails">
          <div class="file-default-preview logo clickable" tabindex="-1">
            <img
                src="{% if organisation.logo is not null %}/{{ organisation.logo.path }}{{ organisation.logo.filename }}{% else %}{{ asset('media/images/blank.gif') }}{% endif %}"
                alt="Your Avatar" style="width:160px">
            <h6 class="text-muted">Click to select</h6>
          </div>
        </div>
      </button>
    </div>
    {{ form_row(form.punchline, { 'value' : organisation.punchline } ) }}
    {{ form_row(form.description, {'label': 'Short describption', 'value': organisation.description}) }}
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    {{ form_row(form.about, { 'value' : organisation.about } ) }}
    {{ form_row(form.mission, { 'value' : organisation.mission } ) }}
    {{ form_row(form.vision, { 'value' : organisation.vision } ) }}
  </div>
  <div class="col-md-6">
    <div class="form-group" style="position: relative">
      <label class="control-label">Core values</label>

