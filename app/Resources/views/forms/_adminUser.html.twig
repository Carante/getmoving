{{ form_start(form) }}
<div class="row">
  <div class="col-md-6">
    <div class="margin--bot-xl">
      <h3>Personal</h3>
      {{ form_row(form.firstName) }}
      {{ form_row(form.middleName) }}
      {{ form_row(form.lastName) }}
      {{ form_row(form.nationality) }}
      {{ form_row(form.sex, {
        'label': 'Gender'
      }) }}
    </div>
    <div class="margin--bot-xl">
      <h3>Contact</h3>
      {{ form_row(form.email) }}
      {{ form_row(form.phone) }}
    </div>
    <div class="margin--bot-xl">
      <h3>Security</h3>
      {{ form_row(form.plainPassword.first, {
        'label': 'Password'
      }) }}
      {{ form_row(form.plainPassword.second, {
        'label': 'Repeat password'
      }) }}
    </div>
    <button type="submit" class="btn btn-success btn-block margin--top-huge">Register user</button>
  </div>
</div>

{# Render CSRF token etc .#}
<div style="display:none">
  {{ form_rest(form) }}
</div>

{{ form_end(form) }}

